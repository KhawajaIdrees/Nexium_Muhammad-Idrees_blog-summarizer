generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      Int     @id @default(autoincrement())
  name    String
  email   String  @unique
  blogs   Blog[]
}

model Blog {
  id      Int     @id @default(autoincrement())
  title   String
  content String
  summary String?
  userId  Int
  user    User    @relation(fields: [userId], references: [id])
}
